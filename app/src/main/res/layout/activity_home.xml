<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">

    <RelativeLayout
        android:id="@+id/rl_holder"
        android:padding="@dimen/margin_16"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_logout_white"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/margin_4"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Name : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_toRightOf="@id/tv_name_title"
            android:text="Abbas Piplodawala"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_below="@id/tv_name_title"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Email : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_below="@id/tv_name_title"
            android:layout_toRightOf="@id/tv_email_title"
            android:text="abbaspiplodawala@gmail.com"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_below="@id/tv_email_title"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Company : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_company_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_below="@id/tv_email_title"
            android:layout_toRightOf="@id/tv_company_title"
            android:text="Loreum ispum"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_below="@id/tv_company_title"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="Role : "
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_role_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:lines="1"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_below="@id/tv_company_title"
            android:layout_toRightOf="@id/tv_role_title"
            android:text="Loreum ispum"
            android:textSize="@dimen/text_size_l"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/rl_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="128dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_add"
                android:padding="@dimen/margin_24"
                android:background="@drawable/round"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_add_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/colorSecondaryText"
                android:text="Add User"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/margin_16"
            android:orientation="vertical"
            android:layout_width="128dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_analyse"
                android:padding="@dimen/margin_24"
                android:background="@drawable/round"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_analyse_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/margin_12"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/colorSecondaryText"
                android:text="Analayse"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
