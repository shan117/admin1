<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">

    <RelativeLayout
        android:id="@+id/rl_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/margin_16">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_16"
            android:drawableLeft="@drawable/ic_name_white"
            android:drawablePadding="@dimen/margin_12"
            android:lines="1"
            android:text="Abbas Piplodawala"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_4"
            android:drawableLeft="@drawable/ic_email_white"
            android:drawablePadding="@dimen/margin_12"
            android:lines="1"
            android:text="abbaspiplodawala@gmail.com"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_l" />


        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_4"
            android:drawableLeft="@drawable/ic_company_white"
            android:drawablePadding="@dimen/margin_12"
            android:lines="1"
            android:text="Loreum ispum"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_l" />


        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_company"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_4"
            android:drawableLeft="@drawable/ic_role_white"
            android:drawablePadding="@dimen/margin_12"
            android:lines="1"
            android:text="Loreum ispum"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_l" />

    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_holder"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round"
                    android:padding="@dimen/margin_24"
                    android:src="@drawable/ic_add_white" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_12"
                    android:text="Add User"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_32"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_analyse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round"
                    android:padding="@dimen/margin_24"
                    android:src="@drawable/ic_analyse_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_12"
                    android:text="Analayse"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round"
                    android:padding="@dimen/margin_24"
                    android:src="@drawable/ic_logout_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_12"
                    android:text="Logout"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_32"
                android:orientation="vertical">



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
