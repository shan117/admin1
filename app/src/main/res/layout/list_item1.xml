<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_4"
        android:id="@+id/tv_date"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_size_s"
        android:text="12/8/2018"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_below="@id/tv_date"
        android:id="@+id/cv_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/image1"
                android:id="@+id/iv_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginLeft="16dp"
                android:tint="@color/colorAccent" />



            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_profile"
                android:layout_marginTop="16dp"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_s"
                android:textColor="@color/colorPrimaryText"
                android:text="Abbas Piplodawala" />

            <TextView
                android:drawablePadding="@dimen/margin_8"
                android:drawableLeft="@drawable/ic_username_grey"
                android:layout_marginTop="2dp"
                android:layout_below="@id/tv_name"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_s"
                android:textColor="@color/colorSecondaryText"
                android:text="Username"
                android:layout_toRightOf="@id/iv_profile"
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:drawablePadding="@dimen/margin_8"
                android:drawableLeft="@drawable/ic_location_grey"
                android:layout_marginTop="2dp"
                android:layout_below="@id/tv_username"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_s"
                android:textColor="@color/colorSecondaryText"
                android:text="Location"
                android:layout_toRightOf="@id/iv_profile"
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:drawablePadding="@dimen/margin_8"
                android:drawableLeft="@drawable/ic_time_grey"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_profile"
                android:layout_below="@id/tv_location"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_s"
                android:textColor="@color/colorSecondaryText"
                android:text="12:13 PM"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>